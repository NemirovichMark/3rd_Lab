            #region algorithm 11
            int oq=0;
            int yq=0;
            try
            {
                Console.WriteLine("Введите искомый элемент");
                oq = int.Parse(Console.ReadLine());
                Console.WriteLine("Введите кол-во элементов массива ");
                yq = int.Parse(Console.ReadLine());
            }
            catch { }
            if(yq>0)
            {
                List<int> dq = new List<int>(yq);
                for (int i = 0; i < yq; i++)
                {
                    try
                    {
                        Console.WriteLine($"Введите элемент с индексом {i}:");
                        dq.Add(int.Parse(Console.ReadLine()));
                    }
                    catch { }
                    
                }
                int lq = 0;
                int pq = dq.Count - 1;
                bool zq = false;
                while (lq <= pq)
                {
                    int i = (lq + pq) / 2;
                    if (dq[i] == oq)
                    {
                        zq = true;
                        Console.WriteLine("искомый элемент находится по индексом " + i);
                        break;
                    }
                    if (dq[i] < oq)
                    {
                        lq = i + 1;
                    }
                    if (dq[i] > oq)
                    {
                        pq = i - 1;
                    }

                }
                if (zq == false)
                {
                    Console.WriteLine("Такого элемента нет");
                }
            }
            else
            {
                Console.WriteLine("Что-то пошло не так");
            }




            #endregion


            #region algorithm 12
            int mmmm = 0;
            int nnnn = 0;
            try
            {
                Console.WriteLine("Сколько элементов в массиве А?");
                nnnn = int.Parse(Console.ReadLine());
                Console.WriteLine("Сколько элементов в массиве B?");
                mmmm = int.Parse(Console.ReadLine());

            }
            catch { }
            if (nnnn > 0 && mmmm > 0)
            {
                int[] A = new int[nnnn];

                for (int i = 0; i < A.Length; i++)
                {
                    Console.WriteLine("Введите элемент массива А ");
                    A[i] = int.Parse(Console.ReadLine());
                }


                int[] B = new int[mmmm];
                for (int i = 0; i < B.Length; i++)
                {
                    Console.WriteLine("Введите элемент массива B ");
                    B[i] = int.Parse(Console.ReadLine());
                }

                int[] C = new int[A.Length + B.Length];
                int aaa = 0, bbb = 0;
                for (int i = 0; i < C.Length - 1; i += 2)
                {
                    if (aaa < A.Length)
                    {
                        C[i] = A[aaa];
                        aaa++;
                    }
                    else
                    {
                        C[i] = B[bbb];
                        bbb++;
                    }
                    if (bbb < B.Length)
                    {
                        C[i + 1] = B[bbb];
                        bbb++;
                    }
                    else
                    {
                        C[i + 1] = A[aaa];
                        aaa++;
                    }
                }
                foreach (int i in C)
                    Console.Write(i + " ");
            }
            else { }


            #endregion


            #region algorithm 13
            int nnn = 0;
            int mmm=0;
            try
            {
                Console.WriteLine("Сколько элементов в массиве А?");
                nnn = int.Parse(Console.ReadLine());
                Console.WriteLine("Сколько элементов в массиве B?");
                mmm = int.Parse(Console.ReadLine());
            }
            catch { }
            if(nnn> 0 && mmm>0)
            {
                List<int> A = new List<int>(nnn);
                List<int> B = new List<int>(mmm);
                int[] C = new int[nnn + mmm];
                for (int i = 0; i < nnn; i++)
                {
                    Console.WriteLine("Введите элементы массива А ");
                    A.Add(int.Parse(Console.ReadLine()));
                }
                A.Sort();
                A.Reverse();
                for (int i = 0; i < mmm; i++)
                {
                    Console.WriteLine("Введите элементы массива B ");
                    B.Add(int.Parse(Console.ReadLine()));
                }
                B.Sort();
                B.Reverse();
                int f = 0;
                int y = 0;
                for (int i = 0; i <= 1; i++)
                {
                    if (A[i] > B[i])
                    {
                        A.CopyTo(C, 0);
                        B.CopyTo(C, nnn);
                    }
                    if (A[i] < B[i])
                    {
                        B.CopyTo(C, 0);
                        A.CopyTo(C, mmm);
                    }
                }
                foreach (int i in C)
                    Console.Write(i + " ");
            }
            else { }



            #endregion



            #region algorithm 14
            int kr = 0;
            try
            {
                Console.WriteLine("Введите кол-во элементов массива ");
                kr = int.Parse(Console.ReadLine());
            }
            catch
            {
                Console.WriteLine("Что-то пошло не так ");
            }
            if (kr > 0)
            {
                List<int> Dr = new List<int>(kr);
                for (int i = 0; i < kr; i++)
                {
                    try
                    {
                        Console.WriteLine($"Введите элемент с индексом {i}:");
                        Dr.Add(int.Parse(Console.ReadLine()));
                    }
                    catch { }

                }
                int n = 0;
                int m = 1;
                int t = 1;
                int U = 0;
                int yu = kr / 2;

                for (int i = 0; i < Dr.Count - yu; i++)
                {
                    U = Dr[n];
                    Dr[i] = Dr[kr - m];
                    Dr[kr - t] = U;
                    t++;
                    n++;
                    m++;
                }



                foreach (int i in Dr)
                    Console.Write(i + " ");
            }
            else
            {
                Console.WriteLine("Что-то пошло не так");
            }
            #endregion


            #region algorithm 15
            int mt=0;
            int kt=0;
            try
            {
                Console.WriteLine("Введите сдвиг ");
                mt = int.Parse(Console.ReadLine());
                Console.WriteLine("Введите кол-во элементов массива ");
                kt = int.Parse(Console.ReadLine());
            }
            catch { }
            if(mt>0 && kt>0)
            {
                int[] ut = new int[kt];
                for (int i = 0; i < kt; i++)
                {
                    try
                    {
                        Console.WriteLine($"Введите элемент с индексом {i}:");
                        ut[i] = int.Parse(Console.ReadLine());
                    }
                    catch {}
                    
                }
                for (int i = 0; i < mt; ++i)
                {
                    int uLast = ut[kt - 1];
                    for (int j = kt - 1; j > 0; j--)
                    {
                        ut[j] = ut[j - 1];
                    }

                    ut[0] = uLast;
                }
                foreach (int i in ut)
                    Console.Write(i);
            }
            else
            {
                Console.WriteLine("Что-то пошло не так");
            }
            #endregion

        }
    }
}

