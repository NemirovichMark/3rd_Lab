            #region part 3 task 9
            int hj = 0;
            try
            {
                Console.WriteLine("Введите кол-во элементов");
                hj = int.Parse(Console.ReadLine());
            }
            catch { }
            if (hj > 0)
            {
                int[] aj = new int[hj];
                int len = 1;
                int maxlen = 1;
                for (int i = 0; i < hj; i++)
                {
                    Console.WriteLine("Введите элемент");
                    aj[i] = int.Parse(Console.ReadLine());
                }
                for (int i = 0; i < hj - 1; ++i)
                {
                    if (aj[i + 1] >= aj[i])
                    {
                        len++;
                    }
                    else
                    {
                        if (len > maxlen)
                        {
                            maxlen = len;
                            len = 1;
                        }
                        len = 1;
                    }
                }
                if (len > maxlen)
                    maxlen = len;
                len = 1;
                for (int i = 0; i < hj - 1; i++)
                {

                    if (aj[i] >= aj[i + 1])
                    {
                        len++;
                    }
                    else
                    {
                        if (len > maxlen)
                        {
                            maxlen = len;
                            len = 1;
                        }
                        len = 1;
                    }
                }


                if (len > maxlen) maxlen = len;
                Console.WriteLine(maxlen);
            }
            else
            {
                Console.WriteLine("Что-то пошло не так ");
