                        gg.Add(int.Parse(Console.ReadLine()));
                    }
                    catch {}
                    
                }
                var negative = gg.Where(x => x < 0).OrderByDescending(x => x).ToArray();
                int j = 0;
                for (int i = 0; i < gg.Count; i++)
                {
                    if (gg[i] < 0)
                    {
                        gg[i] = negative[j];
