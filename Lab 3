            #region part 3 task 8
            try
            {
                Console.WriteLine("Введите кол-во элементов массива ");
                int h = int.Parse(Console.ReadLine());
                List<int> gg = new List<int>(h);
                for (int i = 0; i < h; i++)
                {
                    Console.WriteLine($"Введите элемент с индексом {i}:");
                    gg.Add(int.Parse(Console.ReadLine()));
                }
                var negative = gg.Where(x => x < 0).OrderByDescending(x => x).ToArray();
                int j = 0;
                for (int i = 0; i < gg.Count; i++)
                {
                    if (gg[i] < 0)
                    {
                        gg[i] = negative[j];
                        j++;
                    }
                    Console.Write(gg[i] + " ");
                }
            }
            catch
            {
                Console.WriteLine("Что-то пошло не так ");
            }
            #endregion
            


            #region part 3 task 9
            try
            {
                int counterv = 1;
                int counteru = 1;
                int p = 0;
                int n = 0;
                Console.WriteLine("Введите кол-во элементов массива ");
                int m = int.Parse(Console.ReadLine());
                int[] list = new int[m + 1];
                for (int i = 0; i < m; i++)
                {
                    Console.WriteLine($"Введите элемент с индексом {i}:");
                    list[i] = int.Parse(Console.ReadLine());
                }
                for (int i = 0; i < m; i++)
                {
                    if (list[i + 1] >= list[i])
                    {
                        counterv++;
                        p = Math.Max(counterv, p);


                    }
                    if (list[i + 1] <= list[i])
                    {
                        counteru++;
                        n = Math.Max(counteru, n);
                    }

                }
                p = Math.Max(n, p);
                Console.WriteLine("Ответ " + p);
            }
            catch
            {
                Console.WriteLine("Что-то пошло не так ");
            }
            #endregion
            

            #region part 3 task 12
