                        v1[z] = v[q];
                        z++;
                    }
                }
                for (int q = mmax; q < mmin; q++)
                {
                    if (v[q] < 0)
                    {
                        v1[z] = v[q];
                        z++;
                    }
                }
                Console.WriteLine("Итак, наш новый массив: ");
