            #endregion



            #region algorithm 11
            try
            {
                Console.WriteLine("Введите искомый элемент");
                int o = int.Parse(Console.ReadLine());
                Console.WriteLine("Введите кол-во элементов массива ");
                int y = int.Parse(Console.ReadLine());
                List<int> d = new List<int>(y);
                for (int i = 0; i < y; i++)
                {
                    Console.WriteLine($"Введите элемент с индексом {i}:");
                    d.Add(int.Parse(Console.ReadLine()));
                }
                int l = 0;
                int p = d.Count - 1;
                bool z = false;
                while (l <= p)
                {
                    int i = (l + p) / 2;
                    if (d[i] == o)
                    {
                        z = true;
                        Console.WriteLine("искомый элемент находится по индексом " + i);
                        break;
                    }
                    if (d[i] < o)
                    {
                        l = i + 1;
                    }
                    if (d[i] > o)
                    {
                        p = i - 1;
                    }

                }
                if (z == false)
                {
                    Console.WriteLine("Такого элемента нет");
                }
            }
            catch
            {
                Console.WriteLine("Что-то пошло не так ");
            }


            #endregion


            #region algorithm 12
            try
            {
                Console.WriteLine("Введите кол-во элементов массива А ");
                int y = int.Parse(Console.ReadLine());
                Console.WriteLine("Введите кол-во элементов массива B ");
                int y1 = int.Parse(Console.ReadLine());
                if (y1 > y)
                {
                    y1 = y;
                }
                if (y1 < y)
                {
                    y = y1;
                }
                int[] A = new int[y];
                for (int i = 0; i < y; i++)
                {
                    Console.WriteLine($"А: Введите элемент с индексом {i}:");
                    A[i] = int.Parse(Console.ReadLine());

                }
                int[] B = new int[y1];
                for (int i = 0; i < y1; i++)
                {
                    Console.WriteLine($"B: Введите элемент с индексом {i}:");
                    B[i] = int.Parse(Console.ReadLine());
                }
                int[] C = new int[y + y1];
                int j = 0;
                int r = 0;
                for (int i = 0; i < C.Length; i++)
                {
                    if (i % 2 == 0)
                    {
                        C[i] = A[j];
                        j++;
                    }
                    if (i % 2 != 0)
                    {
                        C[i] = B[r];
                        r++;
                    }
                }
                foreach (int i in C)
                    Console.Write(i);
            }
            catch
            {
                Console.WriteLine("Что-то пошло не так ");
            }




            #endregion


            #region algorithm 13
            try
            {
                Console.WriteLine("Введите кол-во элементов массива А ");
                int p = int.Parse(Console.ReadLine());
                Console.WriteLine("Введите кол-во элементов массива B ");
                int p1 = int.Parse(Console.ReadLine());
                if (p1 > p)
                {
                    p1 = p;
                }
                if (p1 < p)
                {
                    p = p1;
                }
                List<int> A = new List<int>(p);
                for (int i = 0; i < p; i++)
                {
                    Console.WriteLine($"А: Введите элемент с индексом {i}:");
                    A.Add(int.Parse(Console.ReadLine()));

                }

                List<int> B = new List<int>(p1);
                for (int i = 0; i < p1; i++)
                {
                    Console.WriteLine($"B: Введите элемент с индексом {i}:");
                    B.Add(int.Parse(Console.ReadLine()));
                }

                int ee = 0;
                int e = 0;
                List<int> C = new List<int>(p1 + p);
                for (int i = 0; i < p1 + p; i++)
                {
                    if (i % 2 == 0)
                    {
                        C.Add(A[ee]);
                        ee++;
                    }
                    else
                    {
                        C.Add(B[e]);
                        e++;
                    }

                }
                C.Sort();
                foreach (int i in C)
                    Console.WriteLine(i);
            }
            catch
            {
                Console.WriteLine("Что-то пошло не так ");
            }



            #region algorithm 14
            try
            {
                Console.WriteLine("Введите кол-во элементов массива ");
                int k = int.Parse(Console.ReadLine());
                List<int> D = new List<int>(k);
                for (int i = 0; i < k; i++)
                {
                    Console.WriteLine($"Введите элемент с индексом {i}:");
                    D.Add(int.Parse(Console.ReadLine()));
                }
                D.Reverse();
                foreach (int i in D)
                    Console.Write(i + " ");
            }
            catch
            {
                Console.WriteLine("Что-то пошло не так ");
            }
            
            #endregion
            

            #region algorithm 15
            try
            {
                Console.WriteLine("Введите сдвиг ");
                int m = int.Parse(Console.ReadLine());
                Console.WriteLine("Введите кол-во элементов массива ");
                int k = int.Parse(Console.ReadLine());
                int[] u = new int[k];
                for (int i = 0; i < k; i++)
                {
                    Console.WriteLine($"Введите элемент с индексом {i}:");
                    u[i] = int.Parse(Console.ReadLine());
                }
                for (int i = 0; i < m; ++i)
                {
                    int uLast = u[k - 1];
                    for (int j = k - 1; j > 0; j--)
                    {
                        u[j] = u[j - 1];
                    }

                    u[0] = uLast;
                }
                foreach (int i in u)
                    Console.Write(i);
            }
            catch
            {
                Console.WriteLine("Что-то пошло не так ");
            }



            #endregion

        }
    }
}
