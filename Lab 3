                    Console.Write($"Введите число {i}: ");
                    array[i] = int.Parse(Console.ReadLine());
                    a += array[i];
                }
                int c = array.Last();
                int b = a / elem;
                elem += 1;
                for (int i = 0; i < array.Length; i++)
                {
                    if (Math.Abs(array[i] - b) < 1)
                    {
                        b = i;
                    }
                }
                for (int i = array.Length - 2; i > b; i--)
                {
                    array[i + 1] = array[i];
                }
                array[b + 1] = r;
                foreach (int i in array)
                    Console.Write(i + " ");
                Console.WriteLine(c);
            }
