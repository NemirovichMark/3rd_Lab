            #region part 3 task 5
            try
            {
                int k = 0;
                Console.WriteLine("Введите кол-во элементов массива ");
                int p = int.Parse(Console.ReadLine());
                List<int> chisl = new List<int>(p);
                for (int i = 0; i < p; i++)
                {
                    Console.WriteLine($"Введите элемент с индексом {i}:");
                    chisl.Add(int.Parse(Console.ReadLine()));
                }

                for (int i = 0; i < p; i += 2)
                {


                    for (int j = 0; j < p - 2; j += 2)
                    {

                        if (chisl[j] > chisl[j + 2])
                        {
                            k = chisl[j];
                            chisl[j] = chisl[j + 2];
                            chisl[j + 2] = k;
                        }
                    }

                }
                foreach (int i in chisl)
                    Console.Write(i + " ");
            }
            catch
            {
                Console.WriteLine("Что-то пошло не так ");
            }

