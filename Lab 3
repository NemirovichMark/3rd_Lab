                for (int i = 0; i < arr.Length; i++)
                {
                    if (arr[i] <= min)
                    {
                        min = arr[i];
                        min1 = i;
                    }
                }
                if (max1 > min1)
                {
                    for (int i = min1; i <= max1; i++, count++)
                    {
                        counter = counter + arr[i];
                    }
                    Console.WriteLine($"Ответ: {counter / count} ");
                }
                else
                {
                    for (int i = max1; i <= min1; i++, count++)
                    {
                        counter = counter + arr[i];
                    }
                    Console.WriteLine($"Ответ: {counter / count} ");

                }

            }
